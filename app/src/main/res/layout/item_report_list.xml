<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        app:srcCompat="@drawable/report_circle"
        android:id="@+id/imageView2"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_width="@dimen/image_size_12"
        android:layout_height="@dimen/image_size_12"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FooIndentMedium"
        android:id="@+id/textReport"
        android:paddingLeft="@dimen/margin_4"
        android:paddingStart="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        android:layout_marginStart="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_4" />
</LinearLayout>