<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_size_80"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/image_size_48"
        android:layout_height="@dimen/image_size_48"
        app:srcCompat="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageMember"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16" />

    <TextView
        android:text="Member name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageMember"
        android:layout_toEndOf="@+id/imageMember"
        android:layout_toLeftOf="@+id/imageRemoveMember"
        android:layout_toStartOf="@+id/imageRemoveMember"
        android:id="@+id/textMemberName"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        style="@style/FooMedium"/>


    <ImageView
        android:layout_width="@dimen/image_size_48"
        android:layout_height="@dimen/image_size_48"
        app:srcCompat="@drawable/groups_leave"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:padding="@dimen/margin_8"
        android:id="@+id/imageRemoveMember" />

    <TextView
        android:text="@string/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageMember"
        android:layout_alignLeft="@+id/textMemberName"
        android:layout_alignStart="@+id/textMemberName"
        style="@style/FooBlueXS"
        android:visibility="gone"
        android:id="@+id/textAdmin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:background="@color/fooDivider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
